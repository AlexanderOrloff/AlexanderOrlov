def task3():
    folder ='.'
    for f in os.listdir(folder):
        if os.path.isdir(f):
            print(f)

def task4():
    folder = '.'
    txt, csv, xsl = 0,0,0
    for f in os.listdir(folder):
        if  '.txt' in f:
            txt += 1
        if r '.csv' in f:
            csv+= 1
        if '.xsl' in f:
            xsl+= 1
    print (txt, 'txt')
