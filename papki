import os
def task0:
    folder = '.'
    print(os.listdir(folder))
def task1():
    s = input('enter a sentence')
    s =s.split()
    path = s[0]
    for i in range(1,len(s)):
        path += "/"
        path += s[i]
    os.makedirs(path)
